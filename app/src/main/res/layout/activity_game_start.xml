                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/btndesign"
                android:onClick="setName"
                android:text="@string/btn2ndAct"
                android:textColor="@color/whyt" />

            <Button
                android:id="@+id/i2"
                android:layout_width="wrap_content"
